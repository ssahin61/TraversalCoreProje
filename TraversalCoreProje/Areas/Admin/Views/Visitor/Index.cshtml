@model List<VisitorViewModel>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Api Ziyaretçi Listesi</h1>

<table class="table table-bordered">
	<tr>
		<th>#</th>
		<td>Ad</td>
		<td>Soyad</td>
		<td>Şehir</td>
		<td>Ülke</td>
		<td>Mail</td>
		<td>Sil</td>
		<td>Güncelle</td>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<th>@item.VisitorID</th>
			<td>@item.Name</td>
			<td>@item.Surname</td>
			<td>@item.City</td>
			<td>@item.Country</td>
			<td>@item.Mail</td>
			<td><a href="/Admin/Visitor/DeleteVisitor/@item.VisitorID" class="btn btn-outline-danger">Sil</a></td>
			<td><a href="/Admin/Visitor/UpdateVisitor/@item.VisitorID" class="btn btn-outline-success">Güncelle</a></td>
		</tr>
	}
</table>

<a href="/Admin/Visitor/AddVisitor" class="btn btn-outline-primary">Yeni Ziyaretçi Girişi</a>
